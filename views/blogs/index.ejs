<html lang="eng">
 <%- include("../partial/header") %>
<body>
    <%- include("../partial/nav") %>
    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if(blogs.length>0){ %>
            <%blogs.forEach((blog)=>{%>
                <a class="single" href="/blogs/<%=blog._id %>">
                <h3 class="title"><%=blog.title%></h3>
                <p class="snippet"><%=blog.snippet%></p>
            </a>
            <% }) %>
               
                <% } else { %>
           
              
                <h3 class="title">NO Blog Available</h3>
              <%} %>
                
    </div>
    <%- include("../partial/footer") %>
</body>
</html>